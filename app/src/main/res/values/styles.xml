<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#F4D1BD</item>
        <item name="colorPrimaryDark">#110E0E</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textViewStyle">@style/cafeTextViewStyle</item>
        <item name="android:buttonStyle">@style/cafeButtonStyle</item>
        <item name="android:editTextStyle">@style/cafeEditTextStyle</item>
        <item name="android:radioButtonStyle">@style/cafeRadioButtonStyle</item>
        <item name="android:checkboxStyle">@style/cafeCheckboxStyle</item>

    </style>

    <!-- Toolbar의 타이틀 텍스트-->
    <style name="ToolbarTitleText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#110E0E</item>
    </style>

    <!--font 전역 적용-->
    <style name="cafeTextViewStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/custom_font_family</item>
    </style>
    <style name="cafeButtonStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/custom_font_family</item>
    </style>
    <style name="cafeEditTextStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/custom_font_family</item>
    </style>
    <style name="cafeRadioButtonStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/custom_font_family</item>
    </style>
    <style name="cafeCheckboxStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/custom_font_family</item>
    </style>



</resources>
